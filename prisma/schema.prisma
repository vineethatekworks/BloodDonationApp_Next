generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id                    String @id @default(uuid())
  full_name             String
  email                 String  @unique
  password              String
  contact               String?
  blood_group           BloodGroup?
  location              String?
  role                  Role    @default(DONOR)
  available_to_donate   Boolean @default(false)
  last_donated_at       DateTime?
  Created_at            DateTime @default(now())
  updated_at            DateTime @updatedAt
}

enum BloodGroup {
  A_POS  @map("A+")
  A_NEG  @map("A-")
  B_POS  @map("B+")
  B_NEG  @map("B-")
  AB_POS @map("AB+")
  AB_NEG @map("AB-")
  O_POS  @map("O+")
  O_NEG  @map("O-")
}

enum Role {
  DONOR
  RECIPIENT
  ADMIN
}